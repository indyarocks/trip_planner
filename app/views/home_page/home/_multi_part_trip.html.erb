<div class="stations">
  <div class="selectFrom"> From
    <select id="selectFrom" name="origin_1">
      <option value="-" selected>--</option>
      <% @stations.each do |name, code| %>
          <option value="<%= code %>"><%= name %></option>
      <% end %>
    </select>
  </div>

  <div class="selectTo"> To
    <select id="selectTo" name="destination_1">
      <option value="-" selected>--</option>
      <% @stations.each do |name, code| %>
          <option value="<%= code %>"><%= name %></option>
      <% end %>
    </select>
  </div>
</div>

<div class="departDate" id="depart_date_1">
  Depart On<br>
  <%= date_field_tag "depart_date_1" %>
</div>

