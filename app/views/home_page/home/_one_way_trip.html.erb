<div class="stations">
  <div class="selectFrom"> From
    <select id="selectFrom" name="origin">
      <option value="-" selected>--</option>
      <% @stations.each do |name, code| %>
          <option value="<%= code %>"><%= name %></option>
      <% end %>
    </select>
  </div>

  <div class="selectTo"> To
    <select id="selectTo" name="destination">
      <option value="-" selected>--</option>
      <% @stations.each do |name, code| %>
          <option value="<%= code %>"><%= name %></option>
      <% end %>
    </select>
  </div>
</div>

<div class="departDate">
  Depart On<br>
  <%= date_field_tag "depart_date" %>
</div>